@page "/"
@inject FileEditorAppContext FileEditorAppContext
@inject RestService RestService;
@inject NavigationManager NavigationManager

    <div class="login-form">
        <input type="text" placeholder="Nazwa użytkownika" class="form-control" @bind="LoginCommand.Username" />
        <input type="password" placeholder="Hasło" class="form-control" @bind="LoginCommand.Password" />
        <span class="error">@Error</span>
        <button class="btn btn-primary" @onclick="Login">Zaloguj się!</button>
        <p>Nie masz jeszcze konta? <NavLink href="register">Zarejestruj się</NavLink></p>
    </div>
